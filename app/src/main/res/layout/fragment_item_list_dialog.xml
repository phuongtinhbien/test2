<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="30dp"
    android:paddingTop="30dp"
    android:orientation="vertical"
    tools:context=".ItemListDialogFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify temperature"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <com.sdsmdg.harjot.crollerTest.Croller
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/croller_modify"
            android:layout_gravity="center_horizontal"
            app:label=""
            app:max="50"
            app:min="1"
            app:main_circle_color="#141E30"
            app:back_circle_color="#60141E30"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:padding="10dp"
            android:id="@+id/temp_modify"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"/>
    </FrameLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:fontFamily="sans-serif"
        android:id="@+id/btn_save_temp"
        android:text="Save "
        android:textColor="@android:color/white" />
</LinearLayout>